// Function to toggle the slider menu
function toggleMenu() {
  const slider = document.getElementById("slider");
  const body = document.body;
  const menuIcon = document.getElementById("menu-icon");

  // Check if the slider is open or closed and toggle accordingly
  if (slider.style.right === "0px") {
    // Close the menu
    slider.style.right = "-100%";
    body.classList.remove("slider-open");
    menuIcon.innerHTML = "&#9776;"; // Hamburger icon
  } else {
    // Open the menu
    slider.style.right = "0px";
    body.classList.add("slider-open");
    menuIcon.innerHTML = "&times;"; // Cross icon
  }
}