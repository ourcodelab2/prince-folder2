002:------------------------
# add and delete data from dictionaries

user = {}

# adding data
user['name'] = ['Mani']
print(user)

# deleting data
user.pop('name') # pop method is used to remove and return an element
print(user)

003:--------------------
# update dictionary

# update method is used to update the contents of a dictionary by adding elements from another dictionary

user_info = {
    'name' : 'Moksh'
}

more_info = {
    'age' : 27
}

user_info.update(more_info)
print(user_info)

004:-------------------
# fromkeys, get, clear, copy method

# fromkeys() is used to create a new dictionary with specified keys and values
# syntax: dict.fromkeys(keys, value)
user = dict.fromkeys(['name', 'age', 'education'], 'unknown') 
print(user)

# get() method is used to retrieve the value of a key from a dictionary. it returns the value for the given keys if it exists in the dictionary. if the key does not exist, it returns a default value.
# syntax: dict.get(key, default=None)
user1 = {
    'name' : 'mokshita',
    'age': 25
}
print(user1.get('age'))
print(user1.get('occupation'))

# clear() is used to clear values
user1.clear()
print(user1)

# copy() is used to copy dictionary
new_user = user.copy()
print(new_user)

